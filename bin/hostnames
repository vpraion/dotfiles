#!/bin/bash

# === Colors ===
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color / Reset


STEAM_DECK_GOUINEBLADE="${RED}steamdeck-gouineblade${NC} => ${GREEN}192.168.1.8${NC}"
STEAM_DECK_ARA="${RED}steamdeck-ara${NC} => ${GREEN}192.168.1.70${NC}"
DESKTOP_ARA="${RED}desktop-ara${NC} => ${GREEN}192.168.1.5${NC}"

echo -e "$STEAM_DECK_GOUINEBLADE"
echo -e "$STEAM_DECK_ARA"
echo -e "$DESKTOP_ARA"